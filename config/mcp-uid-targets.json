{
  "pages": [
    {
      "id": "options",
      "description": "Mini Translate options page core controls",
      "urlTemplate": "chrome-extension://{EXTENSION_ID}/options.html",
      "waitFor": "翻译服务配置",
      "targets": [
        {
          "key": "options.model-select",
          "role": "comboBox",
          "name": "模型"
        },
        {
          "key": "options.api-base",
          "role": "textBox",
          "name": "API Base URL"
        },
        {
          "key": "options.api-key",
          "role": "textBox",
          "name": "API Key"
        },
        {
          "key": "options.import-json",
          "role": "button",
          "name": "导入 JSON"
        },
        {
          "key": "options.import-txt",
          "role": "button",
          "name": "导入 TXT"
        },
        {
          "key": "options.export-json",
          "role": "button",
          "name": "导出 JSON"
        },
        {
          "key": "options.export-txt",
          "role": "button",
          "name": "导出 TXT"
        },
        {
          "key": "options.save",
          "role": "button",
          "name": "保存"
        },
        {
          "key": "options.test",
          "role": "button",
          "name": "测试"
        },
        {
          "key": "options.qa-add",
          "role": "button",
          "name": "QA 添加词条"
        },
        {
          "key": "options.qa-remove",
          "role": "button",
          "name": "QA 移除词条"
        }
      ]
    },
    {
      "id": "popup",
      "description": "Popup import + toggle controls",
      "urlTemplate": "chrome-extension://{EXTENSION_ID}/popup.html",
      "waitFor": "翻译服务配置",
      "targets": [
        {
          "key": "popup.model-select",
          "role": "comboBox",
          "name": "模型"
        },
        {
          "key": "popup.import-json",
          "role": "button",
          "name": "导入 JSON"
        }
      ]
    },
    {
      "id": "content-menu",
      "description": "Sample page selection for QA hooks",
      "urlTemplate": "https://example.com/",
      "waitFor": "Example Domain",
      "targets": []
    }
  ]
}
