{
  "name": "mini-translate-extension",
  "version": "0.2.13",
  "description": "Mini Translate Chrome Extension",
  "type": "module",
  "scripts": {
    "test": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:diagnosis": "node scripts/run-translation-diagnosis-tests.js",
    "test:diagnosis:coverage": "node scripts/run-translation-diagnosis-tests.js --coverage",
    "test:diagnosis:pattern": "node scripts/run-translation-diagnosis-tests.js --pattern",
    "test:e2e:local": "node tests/run-local-e2e-tests.js",
    "build": "bash scripts/build-zip.sh",
    "dev": "vitest --watch",
    "lint": "eslint .",
    "render:icons": "node scripts/render-icons.js",
    "lint:fix": "eslint . --fix",
    "validate": "npm run lint && npm run test"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^1.0.0",
    "eslint": "^8.57.0",
    "jsdom": "^23.0.0",
    "sharp": "^0.34.4",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "chrome-extension-async": "^3.4.1"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "chrome-extension",
    "translation",
    "ai",
    "mini-translate"
  ],
  "author": "Mini Translate Team",
  "license": "MIT"
}
